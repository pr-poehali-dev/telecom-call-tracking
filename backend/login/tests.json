        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "token": "string",
        "user": {
          "id": "number",
          "email": "string",
          "full_name": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
